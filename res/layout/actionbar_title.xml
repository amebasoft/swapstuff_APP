<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_vertical"
    android:orientation="horizontal" >

<!--     <ImageView -->
<!--         android:id="@+id/uiC_imgVChatThumbnail" -->
<!--         android:layout_width="wrap_content" -->
<!--         android:layout_height="match_parent" -->
<!--         android:src="@drawable/close_btn" -->
<!--         android:layout_margin="2dp" /> -->

    <LinearLayout
    
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
   android:layout_marginRight="25dp"
    android:gravity="center"
    android:orientation="vertical" 
    android:layout_marginLeft="2dp"
      android:id="@+id/layoutactionbartitle"
    >
    
    
    <TextView
        android:id="@+id/actionbarTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:background="@drawable/actionbar_title_background"
        android:text="@string/app_name"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/actionbarKM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:textStyle="italic"
        android:background="@drawable/actionbar_title_background"
        android:text="Km"
        android:textSize="12sp" />

    </LinearLayout>
  <LinearLayout
    
    android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
android:gravity="right"
android:orientation="vertical"
    >
    <ImageButton
        android:id="@+id/uiC_imgbtnCloseChat"
       android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="10dp"
        android:src="@drawable/rtrn"
       android:layout_gravity="right"
        android:background="@null" />
</LinearLayout>
</LinearLayout>